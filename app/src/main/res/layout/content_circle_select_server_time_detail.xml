<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="?actionBarSize"
    android:layout_width="match_parent"
    android:background="@color/bg_color2"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_select_server_time_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="cn.timeface.circle.baby.ui.growth.activities.SelectServerTimeDetailActivity"
        tools:showIn="@layout/activity_select_server_time_detail">

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:button="@drawable/selector_item_photo_select"
            android:paddingLeft="@dimen/view_space_normal"
            android:text="全选"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="@dimen/size_12"
            android:paddingLeft="@dimen/size_12"
            android:paddingRight="@dimen/size_12"
            android:paddingTop="@dimen/size_12"
            android:textColor="@color/text_color13"
            android:textSize="16sp"
            tools:text="又到了周末，外面阳光明媚，却又天气凉爽，实在适合出去转转。" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/size_24"
            android:paddingLeft="@dimen/view_space_normal"
            android:paddingRight="@dimen/view_space_normal" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
