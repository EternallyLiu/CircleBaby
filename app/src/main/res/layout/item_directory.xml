<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_dir_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_directory"
        android:paddingBottom="17dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="9dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_dir_item_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dir_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            tools:text="全部图片的房价靠拢"
            android:ellipsize="end"
            android:maxWidth="200dp"/>

        <TextView
            android:id="@+id/tv_dir_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="#444444"
            android:textSize="14sp"
            tools:text="28张" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dir_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:src ="@mipmap/ic_check"
        android:layout_marginRight="20dp"
        android:src="@drawable/dir_check_box"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignBottom="@id/iv_dir_item_image"
        android:background="#EDEDED"
        />
</RelativeLayout>
