<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >


    <cn.timeface.circle.baby.ui.circle.timelines.views.InputListenerEditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:hint="@string/input_title_tip"
        android:minHeight="@dimen/size_160"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:paddingTop="@dimen/size_10"
        android:textColorHint="@color/aluminum"
        android:textSize="@dimen/text_normal"/>

    <TextView
        android:id="@+id/tv_text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_input"
        android:layout_margin="@dimen/size_10"
        android:text="0/10"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_small"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentTop="true"
        android:background="@color/bg_color6"/>
</RelativeLayout>
