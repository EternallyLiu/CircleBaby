<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/tv_diy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_6"
        android:text="+\n自定义"
        android:textSize="@dimen/text_medium"
        android:gravity="center"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/milestone_diy_right"/>

    <View
        android:layout_width="@dimen/size_6"
        android:layout_height="@dimen/size_6"
        android:layout_alignTop="@+id/tv_diy"
        android:background="@drawable/shape_circle_orange"
        android:translationY="12dp"/>

</RelativeLayout>
