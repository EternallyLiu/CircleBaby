<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/size_2"
    android:paddingLeft="@dimen/size_4"
    android:paddingRight="@dimen/size_6"
    android:paddingTop="@dimen/size_2">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/size_4"
        android:scaleType="fitCenter"
        android:src="@color/white" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_2"
        android:layout_toRightOf="@+id/icon"
        android:gravity="center_vertical|left"
        android:lineSpacingExtra="@dimen/size_4"
        android:text="叔叔"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_small" />

    <Button
        android:id="@+id/invite"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/selector_btn_login"
        android:paddingLeft="@dimen/size_4"
        android:paddingRight="@dimen/size_4"
        android:text="邀请"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal" />

</RelativeLayout>