<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color2">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/bg_color1"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:paddingTop="@dimen/toolbar_padding_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="选择发布方式"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/text_medium" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="centerInside"
        android:rotation="45"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_foot_nav_publish"
        android:padding="@dimen/size_12"/>

    <LinearLayout
        android:layout_above="@+id/iv_back"
        android:id="@+id/ll_publish_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color1"
        android:padding="@dimen/size_6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_ic_menu_batch_import"
            android:gravity="center"
            android:text="照片"
            android:textColor="@color/selector_main_menu_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_ic_menu_scanner"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/selector_main_menu_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_diary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_ic_menu_album"
            android:gravity="center"
            android:text="日记"
            android:textColor="@color/selector_main_menu_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_ic_menu_input_text"
            android:gravity="center"
            android:text="识图卡片"
            android:textColor="@color/selector_main_menu_text"
            android:textSize="12sp"/>


    </LinearLayout>



</RelativeLayout>
