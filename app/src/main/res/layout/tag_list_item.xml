<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/tag_list_item"
    android:padding="@dimen/size_4">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/size_12"
        android:layout_height="@dimen/size_12"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/tag_li_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon"
        android:background="@drawable/tag_li_content_bg"
        android:gravity="center_vertical|left"
        android:minWidth="@dimen/size_48"
        android:lines="1"
        android:paddingBottom="@dimen/size_4"
        android:paddingLeft="@dimen/size_18"
        android:paddingRight="@dimen/size_24"
        android:paddingTop="@dimen/size_4"
        android:text="这是第一次去拍照"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small_12"

        />

</RelativeLayout>