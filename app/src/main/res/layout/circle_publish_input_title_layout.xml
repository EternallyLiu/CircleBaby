<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_4">

    <cn.timeface.circle.baby.ui.circle.timelines.views.InputListenerEditText
        android:id="@+id/et_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_text_count"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/input_title_tip"
        android:lines="1"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/aluminum"
        android:textSize="@dimen/text_normal"/>

    <TextView
        android:id="@+id/tv_text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="0/10"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_small"
        />

</RelativeLayout>