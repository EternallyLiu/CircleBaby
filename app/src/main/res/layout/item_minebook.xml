<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/view_space_normal">

    <com.github.rayboot.widget.ratioview.RatioFrameLayout
        android:id="@+id/fl_book_cover"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        app:fixRatio="fixWidth"
        app:heightRatio="25"
        app:widthRatio="18">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/book_front_mask" />

    </com.github.rayboot.widget.ratioview.RatioFrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_toRightOf="@+id/fl_book_cover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:text=""
            android:textColor="@color/text_color4"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页        数: "

                />

            <TextView
                android:id="@+id/tv_pagenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间: "

                />

            <TextView
                android:id="@+id/tv_creattime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_login"
                android:paddingBottom="@dimen/size_6"
                android:paddingLeft="@dimen/size_12"
                android:paddingRight="@dimen/size_12"
                android:paddingTop="@dimen/size_6"
                android:text="编辑内容"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12"
                android:background="@drawable/selector_btn_login"
                android:paddingBottom="@dimen/size_6"
                android:paddingLeft="@dimen/size_12"
                android:paddingRight="@dimen/size_12"
                android:paddingTop="@dimen/size_6"
                android:text="申请印刷"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_12"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_12"
        android:paddingTop="@dimen/size_12">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_6"
            android:src="@drawable/selector_minebook_dot" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_6"
            android:src="@drawable/selector_minebook_dot" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_6"
            android:src="@drawable/selector_minebook_dot" />
    </LinearLayout>


</RelativeLayout>