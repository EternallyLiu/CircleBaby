<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/size_4">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_margin="@dimen/size_6"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:layout_toRightOf="@+id/iv_icon"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_normal"/>

    <ImageView
        android:id="@+id/iv_icon_1"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_alignLeft="@+id/tv_message"
        android:layout_below="@+id/tv_message"
        android:layout_marginRight="@dimen/size_4"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/iv_icon_2"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_below="@+id/tv_message"
        android:layout_marginRight="@dimen/size_4"
        android:layout_toRightOf="@+id/iv_icon_1"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/iv_icon_3"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_below="@+id/tv_message"
        android:layout_marginRight="@dimen/size_4"
        android:layout_toRightOf="@+id/iv_icon_2"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/btn_agree"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_36"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_message"
        android:layout_marginRight="@dimen/size_4"
        android:background="@drawable/dialog_delete_button_2"
        android:padding="@dimen/size_4"
        android:text="我同意"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"
        />

</RelativeLayout>