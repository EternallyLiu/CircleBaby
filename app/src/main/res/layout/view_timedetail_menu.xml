<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_publish_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/view_space_normal"
    android:paddingLeft="@dimen/view_space_normal"
    android:paddingRight="@dimen/view_space_normal"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/rl_add_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_btn"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp"
        android:visibility="gone">
    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/text_color3"
        />
    </RelativeLayout>
    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />
    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_center_btn"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_color3"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="下载"
        android:background="@drawable/dialog_center_btn"
        android:minHeight="42dp"
        android:textColor="@color/text_color3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_foot_btn"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp">
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分享"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textColor="@color/text_color3"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_normal"
        android:background="@drawable/dialog_bottom_normal"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textColor="@color/text_color3"
            />
    </RelativeLayout>

</LinearLayout>
