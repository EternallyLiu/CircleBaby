<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color8">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_publish_add_nor" />

    <ImageView
        android:id="@+id/iv_deletecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_cover"
        android:layout_alignTop="@+id/iv_cover"
        android:src="@drawable/ic_del_image" />

</RelativeLayout>
