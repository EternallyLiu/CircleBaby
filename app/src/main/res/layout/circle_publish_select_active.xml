<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
    >


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="left|center_vertical"
        android:lines="1"
        android:text="@string/circle_publish_select_acctive_tip"
        android:textColor="@color/text"
        android:textSize="@dimen/text_small_13"/>

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/size_6"
        android:layout_height="@dimen/size_12"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:src="@drawable/mine_data_go"/>

    <TextView
        android:id="@+id/tv_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:layout_marginTop="@dimen/size_10"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_toRightOf="@+id/tv_tip"
        android:gravity="right|center_vertical"
        android:text="手工课"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_small_13"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lily_white"/>
</RelativeLayout>
