<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_pinyin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_normal"
                android:layout_marginTop="@dimen/view_space_normal"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/text"
                android:textSize="16sp"
                tools:text="di di" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_normal"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/text"
                android:textSize="16sp"
                tools:text="弟 弟" />

            <com.github.rayboot.widget.ratioview.RatioImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_space_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_default_holder_img"
                app:fixRatio="fixWidth"
                app:heightRatio="1"
                app:widthRatio="1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/view_space_normal"
            android:layout_marginTop="@dimen/view_space_normal"
            android:src="@drawable/selector_cart_item" />
    </FrameLayout>
</android.support.v7.widget.CardView>