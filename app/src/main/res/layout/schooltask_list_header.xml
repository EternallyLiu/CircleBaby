<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_color3"
              android:orientation="vertical">

    <com.github.rayboot.widget.ratioview.RatioImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_none_photo"
        android:gravity="center"
        android:scaleType="fitXY"
        app:fixRatio="fixWidth"
        app:heightRatio="1"
        app:widthRatio="2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/size_10">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:maxLines="2"
            android:textColor="@color/text"
            android:textSize="@dimen/text_small"/>

        <Button
            android:id="@+id/btn_publish_schooltask"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dialog_delete_button_2"
            android:gravity="center"
            android:padding="@dimen/size_4"
            android:text="发布作业"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_last_homework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:padding="@dimen/size_12"
        android:textColor="@color/jumbo"
        android:textSize="@dimen/text_small_12"/>
</LinearLayout>