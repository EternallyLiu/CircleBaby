<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color3">

    <include
        android:id="@+id/topBar"
        layout="@layout/head"/>

    <TextView
        android:id="@+id/tv_input_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:text="@string/input_create_actve_tip"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_medium"/>

    <cn.timeface.circle.baby.ui.circle.timelines.views.InputListenerEditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_input_tip"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:background="@drawable/input_bg_new_baby"
        android:maxLines="1"
        android:padding="@dimen/size_10"
        android:textColor="@color/text"
        android:textSize="@dimen/text_medium"/>

    <TextView
        android:id="@+id/tv_text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_input"
        android:layout_below="@+id/et_input"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginTop="@dimen/size_4"
        android:text="0 / 8"
        android:textSize="@dimen/text_small_10"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/size_24"
        android:background="@drawable/selector_btn_login"
        android:paddingBottom="@dimen/size_2"
        android:paddingTop="@dimen/size_2"
        android:text="@string/dialog_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"/>

</RelativeLayout>