<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color2">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/bg_color1"
        android:fitsSystemWindows="true"
        android:paddingTop="@dimen/toolbar_padding_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="记录时间"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/text_medium" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color6"
        android:layout_marginTop="@dimen/size_24"/>

    <RelativeLayout
        android:id="@+id/ll_time_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color1"
        android:orientation="horizontal"
        android:padding="@dimen/size_12">
        <CheckBox
            android:id="@+id/cb_time_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:layout_toRightOf="@+id/cb_time_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="当前时间"
            android:background="@color/text_color1"
            android:textSize="@dimen/text_medium"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_time_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_color1"
            android:textSize="@dimen/text_medium"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color6" />
    <RelativeLayout
        android:id="@+id/ll_time_shot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color1"
        android:orientation="horizontal"
        android:padding="@dimen/size_12">
        <CheckBox
            android:id="@+id/cb_time_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:layout_toRightOf="@+id/cb_time_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="拍摄时间"
            android:background="@color/text_color1"
            android:textSize="@dimen/text_medium"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_time_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_color1"
            android:textSize="@dimen/text_medium"
            android:drawableRight="@drawable/mine_data_go"
            android:drawablePadding="@dimen/size_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_12"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color6" />
    <RelativeLayout
        android:id="@+id/ll_time_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color1"
        android:orientation="horizontal"
        android:padding="@dimen/size_12">
        <CheckBox
            android:id="@+id/cb_time_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:layout_toRightOf="@+id/cb_time_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="自定义时间"
            android:background="@color/text_color1"
            android:textSize="@dimen/text_medium"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_time_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_color1"
            android:textSize="@dimen/text_medium"
            android:drawableRight="@drawable/mine_data_go"
            android:drawablePadding="@dimen/size_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_12"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color6" />

</LinearLayout>
