<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:timeLine="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alabaster"
        android:paddingLeft="@dimen/size_6"
        android:paddingRight="@dimen/size_6">

        <cn.timeface.circle.baby.ui.timelines.views.TimeLineMarker
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/size_24"
            android:paddingLeft="@dimen/size_12"
            android:paddingRight="@dimen/size_12"
            android:paddingTop="@dimen/size_24"
            timeLine:beginLine="@color/sea_buckthorn"
            timeLine:endLine="@color/sea_buckthorn"
            timeLine:lineSize="@dimen/size_2"
            timeLine:marker="@drawable/circle_market_drawable"
            timeLine:markerSize="@dimen/size_18"/>

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_toRightOf="@+id/line"
            android:gravity="center_vertical"
            android:text="@string/time_line_select_year"
            android:textColor="@color/sea_buckthorn"
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/tv_creater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/text_small"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/size_4">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_commited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:text="我已提交"
            android:textColor="@color/sea_buckthorn"
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_commited"
            android:padding="@dimen/size_2"
            android:text="作业描述"
            android:textColor="@color/aluminum"
            android:textSize="@dimen/text_small"/>

        <LinearLayout
            android:id="@+id/ll_homework_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:text="作品列表"
                android:textColor="@color/sea_buckthorn"
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:text="查看更多"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_homework_list"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_220"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_220"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_220"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>