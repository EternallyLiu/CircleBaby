<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:select="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_4">

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:lines="1"
        android:text="@string/circle_publish_select_time_tip"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_small"/>

    <cn.timeface.circle.baby.ui.timelines.views.SelectImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/size_21"
        android:layout_height="@dimen/size_16"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        select:isSelected="false"
        select:selectDrawable="@drawable/swichon"
        select:unselectDrawable="@drawable/swichoff"
        />


</RelativeLayout>