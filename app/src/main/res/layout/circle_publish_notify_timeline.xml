<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:select="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_6"
                android:paddingLeft="@dimen/size_4"
                android:background="@color/white"
                android:paddingRight="@dimen/size_4"
                android:paddingTop="@dimen/size_12"
    >

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:lines="1"
        android:text="@string/circle_publish_notify_timeline_tip"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swich_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />


</RelativeLayout>