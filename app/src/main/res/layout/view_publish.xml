<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_publish"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_publish_select"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_56"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_6"
        android:src="@drawable/publish_select"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:drawableTop="@drawable/home_photo"
        android:gravity="center"
        android:text="照片" />
    <TextView
        android:id="@+id/tv_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/home_vedio"
        android:gravity="center"
        android:text="视频"
        android:translationX="@dimen/size_6" />

    <TextView
        android:id="@+id/tv_diary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_publish_select"
        android:layout_weight="1"
        android:drawableTop="@drawable/home_note"
        android:gravity="center"
        android:text="日记"
        android:translationX="-6dp" />

    <TextView
        android:id="@+id/tv_card"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:drawableTop="@drawable/card"
        android:gravity="center"
        android:text="卡片" />

</LinearLayout>
