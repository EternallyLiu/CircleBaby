<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_publish_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color1"
    android:orientation="horizontal"
    android:padding="@dimen/size_6">

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_ic_menu_batch_import"
        android:gravity="center"
        android:text="照片"
        android:textColor="@color/selector_main_menu_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_ic_menu_scanner"
        android:gravity="center"
        android:text="视频"
        android:textColor="@color/selector_main_menu_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_diary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_ic_menu_album"
        android:gravity="center"
        android:text="日记"
        android:textColor="@color/selector_main_menu_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_ic_menu_input_text"
        android:gravity="center"
        android:text="识图卡片"
        android:textColor="@color/selector_main_menu_text"
        android:textSize="12sp" />


</LinearLayout>
