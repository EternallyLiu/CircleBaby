<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_root"
    android:background="#99000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_type_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="按时间"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/text_medium"
            android:paddingTop="@dimen/size_12"
            android:paddingBottom="@dimen/size_12"/>

        <View
            android:id="@+id/line_time"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/tv_type_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="按发布人"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/text_medium"
            android:paddingTop="@dimen/size_12"
            android:paddingBottom="@dimen/size_12"/>

        <View
            android:id="@+id/line_user"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/tv_type_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="按活动"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/text_medium"
            android:paddingTop="@dimen/size_12"
            android:paddingBottom="@dimen/size_12"/>

        <View
            android:id="@+id/line_activity"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/tv_type_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="按@圈的宝宝"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/text_medium"
            android:paddingTop="@dimen/size_12"
            android:paddingBottom="@dimen/size_12"/>

        <View
            android:id="@+id/line_at"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </LinearLayout>
</RelativeLayout>