<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg7">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg7"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_normal"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/OrderTextContent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="@string/cart_total_settlement_label"/>

            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="¥88元"
                android:textColor="@color/red"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exchange_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                style="@style/OrderTextContent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="@string/integral_label"/>

            <TextView
                android:id="@+id/tv_exchange_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="¥88元"
                android:textColor="@color/red"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_coupon_label"
                style="@style/OrderTextContent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="@string/cart_coupon_label"/>

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="¥88元"
                android:textColor="@color/red"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/OrderTextContent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="商家优惠:"/>

            <TextView
                android:id="@+id/tv_pv_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="¥88元"
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                style="@style/OrderTextContent"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="@string/express_fee_label"/>

            <TextView
                android:id="@+id/tv_express_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="¥88元"
                android:textColor="@color/red"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/view_space_normal"
        android:background="@color/bg24"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_total_price_lb"
                style="@style/OrderTextLabel"
                android:text="@string/cart_actual_payment_label"
                android:textColor="@color/text_color9"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/order_total_price_tv"
                style="@style/OrderTextLabel"
                android:layout_marginLeft="4dp"
                android:textColor="@color/red"
                android:textSize="16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/order_action_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/order_action_btn"
            android:background="@drawable/selector_common_gray"
            android:gravity="center"
            android:onClick="clickBtn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/order_action_cancel"
            android:textColor="@color/text_color9"
            android:textSize="16sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/order_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_common_blue"
            android:gravity="center"
            android:onClick="clickBtn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="invisible"/>
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>