<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_12"
    android:padding="@dimen/size_6"
    android:background="@drawable/location_search_bgg"
    android:gravity="center"
    >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/search"
        android:layout_marginRight="@dimen/size_6"
        android:layout_width="@dimen/size_14"
        android:layout_height="@dimen/size_14"
        android:scaleType="fitCenter"
        android:src="@drawable/location_search" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search"
        android:text="搜索附近的位置"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_normal" />
</RelativeLayout>