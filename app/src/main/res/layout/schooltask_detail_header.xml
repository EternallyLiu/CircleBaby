<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:timeLine="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alabaster"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_14"
        android:paddingLeft="@dimen/size_14"
        android:paddingTop="@dimen/size_14">

        <TextView
            android:id="@+id/tv_creater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v_center"
            android:layout_marginBottom="@dimen/size_4"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/text_normal"
            tools:something="2017年03月"/>

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/text_small"
            tools:something="由汪老师发起"/>
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:padding="@dimen/size_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:lineSpacingExtra="@dimen/size_2"
        android:paddingBottom="@dimen/size_10"
        android:text="作业描述"
        android:textColor="@color/aluminum"
        android:textSize="@dimen/text_small"/>


    <GridLayout
        android:id="@+id/gl_image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>