<?xml version="1.0" encoding="utf-8"?>
<com.github.rayboot.widget.ratioview.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <CheckBox
        android:id="@+id/cb_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:button="@null"
        android:drawableLeft="@drawable/selector_item_photo_select"
        android:padding="@dimen/view_space_normal" />

</com.github.rayboot.widget.ratioview.RatioFrameLayout>