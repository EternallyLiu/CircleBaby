<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:id="@+id/close"
        android:visibility="gone"
        android:layout_width="@dimen/size_36"
        android:padding="@dimen/size_12"
        android:layout_height="@dimen/size_36"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:src="@drawable/dialog_close"/>

    <TextView
        android:layout_below="@+id/close"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/size_12"
        android:text="标题"
        android:textColor="@color/sea_buckthorn"
        android:textSize="@dimen/text_large" />

    <View
        android:id="@+id/title_line"
        android:layout_marginLeft="@dimen/size_6"
        android:layout_marginRight="@dimen/size_6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:background="@color/sea_buckthorn" />

    <TextView
        android:id="@+id/message"
        android:layout_margin="@dimen/size_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/size_12"
        android:lineSpacingExtra="@dimen/size_6"
        android:text="提示信息"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

    <LinearLayout
        android:layout_marginTop="@dimen/size_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_12"
            android:layout_weight="1"
            android:background="@drawable/dialog_delete_button_1"
            android:paddingBottom="@dimen/size_6"
            android:paddingTop="@dimen/size_6"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal" />

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_12"
            android:layout_weight="1"
            android:background="@drawable/dialog_delete_button_2"
            android:paddingBottom="@dimen/size_6"
            android:paddingTop="@dimen/size_6"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>


</RelativeLayout>