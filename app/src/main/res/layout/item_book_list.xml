<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_12">

    <ImageView
        android:id="@+id/iv_shelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:layout_marginTop="-10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_book_shelf" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.github.rayboot.widget.ratioview.RatioFrameLayout
            android:id="@+id/fl_book_cover"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/view_space_medium"
            android:clickable="true"
            app:fixRatio="fixWidth"
            app:heightRatio="550"
            app:widthRatio="344">

            <ImageView
                android:id="@+id/iv_book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_default_holder_img" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/book_front_mask" />
        </com.github.rayboot.widget.ratioview.RatioFrameLayout>
        <ImageView
            android:id="@+id/iv_front_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/book_front_mask" />

    </com.github.rayboot.widget.ratioview.RatioFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/view_space_medium"
            android:layout_marginRight="@dimen/view_space_medium"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_space_small"
            android:paddingTop="@dimen/view_space_small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    tools:text="小CC的精装照片书" />
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/iv_menu"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="16sp"
                tools:text="小CC的精装照片书" />

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_menu" />
            </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_space_normal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pagenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:text="页      数: "
                android:textColor="@color/text_color_hint" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2"
                android:text="作      者: "
                android:textColor="@color/text_color_hint" />

            <TextView
                android:id="@+id/tv_creattime"
                android:id="@+id/tv_create_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2"
                android:text="创建时间: "
                android:textColor="@color/text_color_hint" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_login"
                    android:clickable="true"
                    android:paddingBottom="@dimen/size_6"
                    android:paddingLeft="@dimen/size_12"
                    android:paddingRight="@dimen/size_12"
                    android:paddingTop="@dimen/size_6"
                    android:text="编辑内容"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12"
                    android:background="@drawable/selector_btn_login"
                    android:paddingBottom="@dimen/size_6"
                    android:paddingLeft="@dimen/size_12"
                    android:paddingRight="@dimen/size_12"
                    android:paddingTop="@dimen/size_6"
                    android:text="申请印刷"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>