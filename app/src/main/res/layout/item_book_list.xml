<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/view_space_medium">

    <com.github.rayboot.widget.ratioview.RatioImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_default_holder_img"
        app:fixRatio="fixWidth"
        app:heightRatio="10"
        app:widthRatio="9" />

    <LinearLayout
        android:layout_marginLeft="@dimen/view_space_medium"
        android:layout_toRightOf="@+id/iv_book_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="小CC的精装照片书"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>