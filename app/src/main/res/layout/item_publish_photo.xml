<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_habit_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_adapter_bg"
    android:orientation="vertical"
    android:padding="@dimen/size_6">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color1"
        android:text="2016.05.22"
        android:padding="@dimen/size_6" />

    <LinearLayout
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_pic_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/size_6"
        android:visibility="gone">

        <TextView
            android:id="@+id/pic_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/size_4"
            android:text="共9张图片  "
            android:textColor="@color/sea_buckthorn"
            android:textSize="@dimen/text_medium"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_pic_count"
            android:layout_width="@dimen/size_15"
            android:layout_height="@dimen/size_9"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pic_count"
            android:scaleType="fitCenter"
            android:src="@drawable/home_pic_count" />
    </RelativeLayout>
    <!---->
    <!--<GridView-->
        <!--android:id="@+id/gv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:horizontalSpacing="@dimen/size_2"-->
        <!--android:numColumns="3"-->
        <!--android:verticalSpacing="@dimen/size_2"></GridView>-->

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@color/bg_color7" />

    <TextView
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color1"
        android:gravity="start"
        android:hint="点击记录照片后的故事"
        android:textColor="@color/black_overlay"
        android:enabled="false"
        android:padding="@dimen/size_12" />
</LinearLayout>