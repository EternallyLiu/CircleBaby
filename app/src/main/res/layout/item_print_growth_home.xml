<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardElevation="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="24dp"
        android:paddingLeft="@dimen/view_space_medium"
        android:paddingRight="@dimen/view_space_medium"
        android:paddingTop="24dp">

        <com.github.rayboot.widget.ratioview.RatioImageView
            android:id="@+id/iv_book"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_default_holder_img"
            app:fixRatio="fixWidth"
            app:heightRatio="10"
            app:widthRatio="9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_normal"
            android:layout_toRightOf="@id/iv_book"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text"
                tools:text="小CC的精装书" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_normal"
                android:layout_marginTop="@dimen/view_space_normal"
                android:textColor="@color/text_color_hint"
                tools:text="覆膜硬壳防水防污，多种主题可任意选择" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_hint"
                tools:text="20X10cm" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>