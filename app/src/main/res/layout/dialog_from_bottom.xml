<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/view_space_normal"
    android:paddingLeft="@dimen/view_space_normal"
    android:paddingRight="@dimen/view_space_normal">

    <RelativeLayout
        android:id="@+id/rl_add_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_btn"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp">

        <TextView
            android:id="@+id/tv_add_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="添加内容"
            android:textColor="@color/text_color3" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_edit_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_center_btn"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp">

        <TextView
            android:id="@+id/tv_reporter1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="编辑模式"
            android:textColor="@color/text_color3" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_book_pre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_center_btn"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp">

        <TextView
            android:id="@+id/tv_book_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="书本模式"
            android:textColor="@color/text_color3" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_delete_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_foot_btn"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="42dp">

        <TextView
            android:id="@+id/tv_delete_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="删除相册"
            android:textColor="@color/text_color3" />
    </RelativeLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/view_space_normal"
        android:background="@drawable/dialog_bottom_normal"
        android:minHeight="42dp"
        android:text="取消"
        android:textColor="@color/text_color3" />

</LinearLayout>