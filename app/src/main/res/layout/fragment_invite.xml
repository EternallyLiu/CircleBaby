<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color8"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar_layout"
        layout="@layout/layout_toolbar" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邀请码:"
        android:textSize="@dimen/text_large"
        android:textColor="@color/bg_color1"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_24"
        android:background="@color/bg_color8"
        />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/text_large"
        android:textColor="@color/bg_color1"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_6"
        android:background="@color/bg_color8"
        />
    
    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_12"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载宝宝时光输入邀请码完成验证后，"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color3"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_12"
        android:background="@color/bg_color8"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="就能看到宝宝的照片、视频和最新变化了"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_color3"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_6"
        android:background="@color/bg_color8"
        />
    <Button
        android:id="@+id/btn_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/selector_btn_login"
        android:text="通过微信邀请"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_medium" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_color8"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:layout_marginTop="@dimen/size_12">
        <Button
            android:id="@+id/btn_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_login"
            android:text="QQ邀请"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium" />
        <Button
            android:id="@+id/btn_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_login"
            android:text="短信邀请"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium"
            android:layout_marginLeft="@dimen/size_24"/>

    </LinearLayout>





</LinearLayout>
