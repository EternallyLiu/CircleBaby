<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <EditText
        android:id="@+id/et_circle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_medium"
        android:layout_marginRight="@dimen/view_space_medium"
        android:layout_marginTop="@dimen/view_space_large"
        android:background="@drawable/shape_create_circle_edit_bg"
        android:hint="取一个名字"
        android:inputType="text"
        android:maxLength="16"
        android:padding="@dimen/view_space_normal"
        android:textColor="@color/text"
        android:textColorHint="@color/text_color_hint"
        android:textSize="@dimen/text_normal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_medium"
        android:layout_marginRight="@dimen/view_space_medium"
        android:layout_marginTop="@dimen/view_space_medium">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="是否公开"
            android:textColor="@color/text_color_hint"
            android:textSize="@dimen/text_normal" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:checked="true" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_medium"
        android:layout_marginRight="@dimen/view_space_medium"
        android:layout_marginTop="@dimen/view_space_medium"
        android:background="@drawable/selector_btn_login"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/view_space_normal"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/view_space_medium"
        android:layout_marginTop="@dimen/view_space_normal"
        android:clickable="true"
        android:paddingBottom="@dimen/view_space_normal"
        android:paddingTop="@dimen/view_space_normal"
        android:text="加入已有圈子"
        android:textColor="@color/text_color16"
        android:textSize="@dimen/text_small" />
</LinearLayout>
