<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_publish_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tran_30_black">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color8">

            <ImageView
                android:id="@+id/iv_book"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/size_12"
                android:src="@drawable/ic_login_qq"
                android:scaleType="centerInside"/>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginTop="@dimen/size_12"
                android:layout_toRightOf="@+id/iv_book"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/bg_color10"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_2"
                    android:text="88"
                    android:textColor="@color/bg_color10"
                    android:textSize="@dimen/text_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_price"
                android:layout_below="@+id/ll_price"
                android:layout_marginTop="@dimen/size_6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_del" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_24"
                    android:layout_marginLeft="@dimen/size_6"
                    android:background="@drawable/shape_etcount_bg"
                    android:gravity="center"
                    android:text="1" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_6"
                    android:src="@drawable/icon_add" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_count"
                android:layout_below="@+id/ll_count"
                android:layout_marginTop="@dimen/size_6"
                android:text="选择打印数量(上限99本)" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_6"
                android:layout_marginTop="@dimen/size_6"
                android:src="@drawable/close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tran_30_black" />

        <RelativeLayout
            android:id="@+id/rl_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color8"
            android:padding="@dimen/size_12">

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择开本（书本尺寸）"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_size"
                android:layout_marginTop="@dimen/size_12"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_size16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:padding="@dimen/size_6"
                    android:text="正16开 260mm*185mm"
                    android:textColor="@drawable/selector_applyprint_textcolor" />

                <TextView
                    android:id="@+id/tv_size32"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:padding="@dimen/size_6"
                    android:text="正32开 216mm*150mm"
                    android:textColor="@drawable/selector_applyprint_textcolor" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tran_30_black" />

        <RelativeLayout
            android:id="@+id/rl_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color8"
            android:padding="@dimen/size_12">

            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择开本（书本尺寸）"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_color"
                android:layout_marginTop="@dimen/size_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="彩色"
                    android:textColor="@drawable/selector_applyprint_textcolor" />

                <TextView
                    android:id="@+id/tv_bw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="黑白"
                    android:textColor="@drawable/selector_applyprint_textcolor" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tran_30_black" />

        <RelativeLayout
            android:id="@+id/rl_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color8"
            android:padding="@dimen/size_12">

            <TextView
                android:id="@+id/tv_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纸张"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_paper"
                android:layout_marginTop="@dimen/size_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_paper1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="特种纸（适合字多）"
                    android:textColor="@drawable/selector_applyprint_textcolor" />

                <TextView
                    android:id="@+id/tv_paper2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="铜版纸（适合图多）"
                    android:textColor="@drawable/selector_applyprint_textcolor" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tran_30_black" />

        <RelativeLayout
            android:id="@+id/rl_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color8"
            android:padding="@dimen/size_12">

            <TextView
                android:id="@+id/tv_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装订"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tv_bind_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_bind"
                android:text="(页数不足90页，不支持法式精装和豪华精装)"
                android:textColor="@color/bg_color10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bind"
                android:layout_marginTop="@dimen/size_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bind1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="平装"
                    android:textColor="@drawable/selector_applyprint_textcolor" />

                <TextView
                    android:id="@+id/tv_bind2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="法式精装"
                    android:textColor="@drawable/selector_applyprint_textcolor" />

                <TextView
                    android:id="@+id/tv_bind3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_applyprint"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="豪华精装"
                    android:textColor="@drawable/selector_applyprint_textcolor" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color8"
            android:padding="@dimen/size_12">

            <TextView
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_12"
                android:layout_weight="1"
                android:background="@drawable/shape_green_bg"
                android:gravity="center"
                android:padding="@dimen/size_12"
                android:text="加入印刷车"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_yellow_bg"
                android:gravity="center"
                android:padding="@dimen/size_12"
                android:text="立即购买"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
