<?xml version="1.0" encoding="utf-8"?><!--空心圆角矩形  -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

    <!-- 圆角半径 -->
    <corners android:radius="4dp"/>

    <!--矩形的边线  -->
    <stroke
        android:width="1px"
        android:color="@color/line_color"/>

    <!--矩形的宽高  -->
    <size
        android:width="100dp"
        android:height="30dp"/>

    <!-- 矩形的内部颜色，这里设置成透明，即空心 -->
    <solid android:color="@android:color/white"/>

    <padding
        android:bottom="2dp"
        android:left="10dp"
        android:right="10dp"
        android:top="2dp"/>
</shape>