<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="5dp" android:top="5dp" android:left="10dp" android:right="10dp">
                <shape android:shape="rectangle">
                    <corners
                        android:radius="5dp"/>

                    <solid android:color="@color/colorPrimaryDark"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item android:bottom="5dp" android:top="5dp" android:left="10dp" android:right="10dp">
                <shape android:shape="rectangle">
                    <corners
                        android:radius="5dp"/>

                    <solid android:color="@color/text_color28"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="5dp" android:top="5dp" android:left="10dp" android:right="10dp">
                <shape android:shape="rectangle">
                    <corners
                        android:radius="5dp"/>

                    <solid android:color="@color/colorPrimary"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>