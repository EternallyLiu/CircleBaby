<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.timeface.circle.baby">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <permission
        android:name="cn.timeface.circle.baby.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signature" />
    <!-- 这里com.xiaomi.mipushdemo改成app的包名 -->
    <uses-permission android:name="cn.timeface.circle.baby.permission.MIPUSH_RECEIVE" />
    <!-- 这里com.xiaomi.mipushdemo改成app的包名 -->
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

    <!-- 环信 -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="cn.timeface.circle.baby.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="cn.timeface.circle.baby.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 友盟设置 -->
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="Channel ID" />
        <!-- 友盟设置 -->

        <meta-data
            android:name="cn.timeface.circle.baby.utils.glide.TFGlideModule"
            android:value="GlideModule" />

        <!-- ************************ALI START*************** -->

        <meta-data
            android:name="END_POINT"
            android:value="http://oss-cn-hangzhou.aliyuncs.com" />
        <meta-data
            android:name="ALI_STS"
            android:value="http://auth.timeface.cn/aliyun/sts" />
        <meta-data
            android:name="ALI_BUCKET"
            android:value="timeface-image01" />
        <!-- ************************ALI END*************** -->

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.base.BaseRecyclerViewActivity"
            android:label="@string/title_activity_base_recycler_view" />
        <activity
            android:name=".activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TabMainActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.ConfirmPasswordActivity" />
        <activity android:name=".activities.ForgetPasswordActivity" />
        <activity android:name=".activities.SetPasswordActivity" />
        <activity android:name=".activities.CreateBabyActivity" />
        <activity android:name=".activities.InviteCodeActivity" />
        <activity android:name=".activities.RelationshipActivity" />
        <activity android:name="com.wechat.photopicker.PickerPhotoActivity" />
        <activity android:name="com.wechat.photopicker.PickerVideoActivity" />
        <activity android:name=".activities.SelectPublishActivity" />
        <activity android:name=".activities.PublishActivity" />
        <activity android:name=".activities.DiaryPublishActivity" />
        <activity android:name=".activities.CardPublishActivity" />
        <activity android:name=".activities.SelectMileStoneActivity" />
        <activity android:name=".activities.SelectTimeActivity" />
        <activity android:name="com.wechat.photopicker.BigImageShowActivity" />
        <activity android:name=".activities.PhotoSelectionActivity" />
        <activity android:name=".activities.PhotoViewerNewActivity" />
        <activity android:name=".activities.VideoEditActivity" />
        <activity android:name=".activities.VideoPlayActivity" />
        <activity android:name=".activities.PhotoRecodeDetailActivity" />
        <activity android:name=".activities.FragmentBridgeActivity" />
        <activity android:name=".activities.TimeLineDetailActivity" />
        <activity
            android:name=".activities.CloudAlbumActivity"
            android:label="@string/cloudAlbum"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CloudAlbumDetailActivity"
            android:label="@string/cloudAlbum"
            android:screenOrientation="portrait" />
    </application>

</manifest>